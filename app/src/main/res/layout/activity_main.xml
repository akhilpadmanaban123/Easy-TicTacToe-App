<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backtick"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="90dp"
        android:id="@+id/r5"
        android:layout_height="90dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/BUT5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
           tools:ignore="VectorDrawableCompat">
        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:id="@+id/r8"
        android:layout_height="90dp"
        android:layout_below="@+id/line3"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/BUT8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
             tools:ignore="VectorDrawableCompat">
        </ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:id="@+id/r9"
        android:layout_height="90dp"
        android:layout_below="@+id/line3"
        android:layout_toRightOf="@+id/line2"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/BUT9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            tools:ignore="VectorDrawableCompat">
        </ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:id="@+id/r7"
        android:layout_height="90dp"
        android:layout_below="@+id/line3"
        android:layout_toLeftOf="@id/line1"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/BUT7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
             tools:ignore="VectorDrawableCompat">
        </ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:id="@+id/r2"
        android:layout_height="90dp"
        android:layout_above="@+id/line4"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/BUT2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            tools:ignore="VectorDrawableCompat">
        </ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:id="@+id/r1"
        android:layout_height="90dp"
        android:layout_toLeftOf="@+id/line1"
        android:layout_above="@+id/line4"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/BUT1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            tools:ignore="VectorDrawableCompat">
        </ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:id="@+id/r3"
        android:layout_height="90dp"
        android:layout_toRightOf="@+id/line2"
        android:layout_above="@+id/line4"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/BUT3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            tools:ignore="VectorDrawableCompat">
        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:id="@+id/r6"
        android:layout_height="90dp"
        android:layout_toRightOf="@id/line2"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/BUT6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
             tools:ignore="VectorDrawableCompat">
        </ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="90dp"
        android:id="@+id/r4"
        android:layout_height="90dp"
        android:layout_toLeftOf="@id/line1"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/BUT4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
             tools:ignore="VectorDrawableCompat">
        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="302dp"
        android:layout_centerInParent="true"
        android:id="@+id/line1"
        android:layout_toLeftOf="@id/r5"
        android:background="@color/black">

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="10dp"
        android:layout_height="302dp"
        android:id="@+id/line2"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/r5"
        android:background="@color/black">

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="302dp"
        android:layout_height="10dp"
        android:id="@+id/line4"
        android:layout_centerInParent="true"
        android:layout_above="@id/r5"
        android:background="@color/black">

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="302dp"
        android:layout_height="10dp"
        android:id="@+id/line3"
        android:layout_centerInParent="true"
        android:layout_below="@id/r5"
        android:background="@color/black">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/subline"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_above="@id/line1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="#090302">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/textpla"
        android:layout_above="@id/subline"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp">


        <TextView
            android:id="@+id/t"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/pump"
            android:text="Player 1"
            android:textColor="#000000"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/pump"
            android:text="Player 2"
            android:textColor="#000000"
            android:textSize="34sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dp">

        <ImageView
            android:id="@+id/restart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/restart" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_above="@id/subline"
        android:layout_toRightOf="@id/textpla"
        android:layout_marginBottom="40dp">

        <EditText
            android:id="@+id/score1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:ems="4"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/black"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/score2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:ems="4"
            android:fontFamily="sans-serif"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/black"
            android:textSize="30dp" />
    </RelativeLayout>
</RelativeLayout>