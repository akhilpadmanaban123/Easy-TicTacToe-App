<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backtick"
    tools:context=".Screen2">

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="430dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="239dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aquire"
            android:text="Select the PlayMode"
            android:textColor="@color/black"
            android:textSize="43dp"
            tools:layout_editor_absoluteX="96dp"
            tools:layout_editor_absoluteY="247dp" />

        <RadioGroup
            android:layout_width="219dp"
            android:layout_height="177dp"
            android:layout_marginTop="90dp">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pump"
                android:text="Player vs Player"
                android:textSize="30dp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/pump"
                android:text="Computer vs Player"
                android:textSize="30dp" />
        </RadioGroup>
        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="310dp">


            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_button"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="#0B0909" />
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>